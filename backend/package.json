{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run seed:products && NODE_ENV=dev ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "npm run seed:products && NODE_ENV=production node dist/server.js",
    "seed:products": "ts-node-dev src/seed/seedProducts.ts",
    "products-production": "ts-node-dev dist/seed/seedProducts.ts",
    "type-check": "tsc --noEmit",
    "dev:docker": "docker compose --profile local up --build",
    "down:docker": "docker compose down"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "pg": "^8.11.0",
    "sequelize": "^6.37.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.0"
  },
  "keywords": [],
  "author": "Pulasthi Aberathne",
  "license": "ISC",
  "description": "E commerce backend setup"
}
